[".config/tmux/plugins/tpm"]
    type = "archive"
    url = "https://github.com/tmux-plugins/tpm/archive/master.tar.gz"
    exact = true
    stripComponents = 1
    refreshPeriod = "168h"

[".config/zsh/plugins/zsh-completions"]
type = "git-repo"
url  = "https://github.com/zsh-users/zsh-completions.git"
refreshPeriod = "168h"

[".config/zsh/plugins/fzf-tab"]
type = "git-repo"
url  = "https://github.com/Aloxaf/fzf-tab.git"
refreshPeriod = "168h"

[".config/zsh/plugins/zsh-syntax-highlighting"]
type = "git-repo"
url  = "https://github.com/zsh-users/zsh-syntax-highlighting.git"
refreshPeriod = "168h"

[".config/zsh/plugins/zsh-vi-mode"]
type = "git-repo"
url  = "https://github.com/jeffreytse/zsh-vi-mode.git"
refreshPeriod = "168h"

[".config/zsh/plugins/powerlevel10k"]
type = "git-repo"
url  = "https://github.com/romkatv/powerlevel10k.git"
refreshPeriod = "168h"

{{- if eq .chezmoi.os "linux" }}

[".local/bin/nvim"]
    type = "file"
    {{- if eq .chezmoi.arch "arm64" }}
    url = "https://github.com/neovim/neovim/releases/download/stable/nvim-linux-arm64.appimage"
    {{- else }}
    url = "https://github.com/neovim/neovim/releases/download/stable/nvim-linux-x86_64.appimage"
    {{- end }}
    refreshPeriod = "672h"
    executable = true

[".local/bin/zoxide"]
    type = "archive-file"
    {{- if eq .chezmoi.arch "arm64" }}
    url = {{ gitHubLatestReleaseAssetURL "ajeetdsouza/zoxide" "zoxide-*-aarch64-unknown-linux-musl.tar.gz" | quote }}
    {{- else }}
    url = {{ gitHubLatestReleaseAssetURL "ajeetdsouza/zoxide" "zoxide-*-x86_64-unknown-linux-musl.tar.gz" | quote }}
    {{- end }}
    refreshPeriod = "168h"
    executable = true
    path = "zoxide"

[".local/bin/fzf"]
    type = "archive-file"
    url = {{ gitHubLatestReleaseAssetURL "junegunn/fzf" (printf "fzf-*-%s_%s.tar.gz" .chezmoi.os .chezmoi.arch) | quote }}
    refreshPeriod = "168h"
    executable = true
    path = "fzf"

[".local/bin/starship"]
    type = "archive-file"
    {{- if eq .chezmoi.arch "arm64" }}
    url = {{ gitHubLatestReleaseAssetURL "starship/starship" "starship-aarch64-unknown-linux-musl.tar.gz" | quote }}
    {{- else }}
    url = {{ gitHubLatestReleaseAssetURL "starship/starship" "starship-x86_64-unknown-linux-gnu.tar.gz" | quote }}
    {{- end }}
    refreshPeriod = "168h"
    executable = true
    path = "starship"

{{- end }}
