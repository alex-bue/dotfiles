#!/bin/bash

set -eufo pipefail

{{ $brews := list
     "neovim"
     "python"
     "chezmoi"
     "curl"
     "fd"
     "ffmpeg"
     "git"
     "node"
     "ripgrep"
     "tmux"
     "wget"
     "htop"
     "neofetch"
     "tree" -}}

{{ $casks := list
     "wezterm"
     "arc"
     "1password"
     "1password-cli"
     "google-chrome"
     "karabiner-elements"
     "obsidian"
     "amethyst"
     "onedrive"
     "eurkey"
     "intellij-idea"
     "nvidia-geforce-now" 
     "anki"
     "iina"
     "scroll-reverser"
     "vmware-fusion"
     "slack"
     "raycast" -}}


brew bundle --no-lock --file=/dev/stdin <<EOF
{{ range ($brews | sortAlpha | uniq) -}}
brew "{{ . }}"
{{ end -}}
{{ range ($casks | sortAlpha | uniq) -}}
cask "{{ . }}"
{{ end -}}
EOF

# Install or update fzf
$(brew --prefix)/opt/fzf/install
