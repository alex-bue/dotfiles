#!/bin/bash

set -eufo pipefail

{{ $brews := list
     "bat"
     "neovim"
     "chezmoi"
     "curl"
     "exa"
     "fd"
     "ffmpeg"
     "gh"
     "git"
     "git-lfs"
     "node"
     "openjdk"
     "ripgrep"
     "tmux"
     "wget"
     "htop"
     "xz"
     "tree"
     "fzf" -}}

{{ $casks := list
     "kitty"
     "1password"
     "1password-cli"
     "google-chrome"
     "firefox"
     "karabiner-elements"
     "visual-studio-code"
     "obsidian"
     "amethyst"
     "onedrive"
     "eurkey"
     "intellij-idea"
     "nvidia-geforce-now" 
     "anki"
     "iina"
     "raycast" -}}


brew bundle --no-lock --file=/dev/stdin <<EOF
{{ range ($brews | sortAlpha | uniq) -}}
brew "{{ . }}"
{{ end -}}
{{ range ($casks | sortAlpha | uniq) -}}
cask "{{ . }}"
{{ end -}}
EOF

# Install or update fzf
$(brew --prefix)/opt/fzf/install
